    "def steps(number:int) -> int:\n",
    "    even = number % 0\n",
    "\n",
    "    if number is even:\n",
    "        return number // 2\n",
    "    if number is not even:\n",
    "        return number * 3 + 1\n",
    "    else:\n",
    "        raise ValueError(\"Only positive integers are allowed\")"
   ]
